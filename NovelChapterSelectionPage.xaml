<Page x:Class="AniTool.ChapterSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AniTool"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChapterSelectionPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="novelImage" Height="100" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="ADD DESCRIPTION LATER" VerticalAlignment="Center"/>
        <Grid Grid.Row="1">
            <ScrollViewer x:Name="novelScroll">
                <!--Code is in C#-->
            </ScrollViewer>
        </Grid>
       
    </Grid>
</Page>
